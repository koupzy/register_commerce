{% block date_widget %}
    {% spaceless %}
        {% if widget == 'single_text' %}
            {{ block('field_widget') }}
        {% else %}
            <div style="display: flex"  {{ block('widget_container_attributes') }}>
                {{ date_pattern|replace({
                    '{{ year }}':  form_widget(form.year,{ 'attr': { 'class': 'form-control form-control-select2 ' } }),
                    '{{ month }}': form_widget(form.month,{ 'attr': { 'class': 'form-control form-control-select2 ' } }),
                    '{{ day }}': form_widget(form.day,{ 'attr': { 'class': 'form-control form-control-select2 ' } }),
               })|raw }}
            </div>
        {% endif %}
    {% endspaceless %}
{% endblock date_widget %}